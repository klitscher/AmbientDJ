<Song@Label>
	id: song
	halign: 'left'
	valign: 'middle'
	size_hint_y: None
	text_size: self.width, None
	height: self.texture_size[1]
	canvas:
		Color:
			rgb: 1, 0, 0
		Rectangle:
			pos: 0, song.y + song.height
			size: song.width, 2

<RightWidget>
	orientation: 'vertical'
	#display number of songs in given playlist
	Label:
		size_hint_y: 1
		id: num_songs
		text: ''
		markup: True
	#display dynamic playlist
	RecycleView:
		viewclass: 'Song'
		size_hint_y: 8
		id: alt_plst
		RecycleBoxLayout:
			default_size: None, dp(30)
			default_size_hint: 1, None
			size_hint_y: None
			height: self.minimum_height
			orientation: 'vertical'
	#button for user to activate playlist with given filters
	Button:
		disabled: True
		size_hint_y: 1
		text: 'ACTIVATE'
		on_press: root.activate_playlist()
		id: activate